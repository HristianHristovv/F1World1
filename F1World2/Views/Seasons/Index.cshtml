@model IEnumerable<F1_World.Models.Season>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-danger">Seasons</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChampionPilot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChampionTeamId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChampionTeam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChampionPilot.PilotId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChampionTeamId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChampionTeam)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SeasonId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SeasonId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SeasonId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
